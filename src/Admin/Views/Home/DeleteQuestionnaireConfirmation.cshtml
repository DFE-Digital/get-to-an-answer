@model QuestionnaireViewModel

@{
  ViewData["Title"] = "Delete the questionnaire";
}

@section BeforeContent
{
  <a class="govuk-back-link govuk-!-display-none-print" href="/admin/questionnaires/@Model.Questionnaire?.Id/track">Back to questionnaire '@Model.Questionnaire?.Title'</a>
}

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds-from-desktop">
    <h1 class="govuk-heading-l">Are you sure you want to delete this questionnaire?</h1>
    <p class="govuk-body">By submitting this application you are confirming that, to the best of your knowledge, the details you are providing are correct.</p>
    <form action="/admin/questionnaires/@Model.Questionnaire?.Id/delete" method="post" novalidate>
      <div class="govuk-form-group">
        <div class="govuk-radios" data-module="govuk-radios" data-govuk-radios-init="">
           <div class="govuk-radios__item">
              <input id="del-questionnaire-yes-input" aria-describedby="pages-selection-type-input-only-one-option-true-hint"
                     class="govuk-radios__input" type="radio" value="true" name="DeleteQuestionnaire">
              <label for="del-questionnaire-yes-input" class="govuk-label govuk-radios__label">Yes</label>
           </div>
           <div class="govuk-radios__item">
              <input id="del-questionnaire-no-input" aria-describedby="pages-selection-type-input-only-one-option-false-hint"
                     class="govuk-radios__input" type="radio" value="false" name="DeleteQuestionnaire">
              <label for="del-questionnaire-no-input" class="govuk-label govuk-radios__label">No</label>
           </div>
        </div>
     </div>
      
      <div class="govuk-button-group">
        <button class="govuk-button govuk-button--primary" type="submit">Continue</button>
      </div>
    </form>
  </div>
</div>