@page "/admin/questionnaires/{questionnaireId:guid}/edit-slug"
@addTagHelper *, Common
@model Admin.Pages.Questionnaire.EditQuestionnaireSlug

@{
  const string title = "Add or edit questionnaire ID";
  ViewData["Title"] = title;

  const string inputId = "questionnaire-slug";
}

@section BeforeContent
{
  <a class="govuk-back-link govuk-!-display-none-print" href="@Model?.BackLinkSlug">Back</a>
}

@if (Model!.HasErrors())
{
  @await Html.PartialAsync("_ErrorSummary")
}

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <form accept-charset="UTF-8" method="post">
      <input type="hidden" asp-for="@Model.BackLinkSlug" />
      <govuk-form-group asp-for="@Model.Slug">
        <h1 class="govuk-label-wrapper">
          <label for="@inputId" class="govuk-label govuk-label--l">@title</label>
        </h1>
        <div class="govuk-hint" id="@inputId-hint">
          <p>The questionnaire ID is an identifier used to load the questionnaire into your service. You must do this before publishing the questionnaire.</p>
          <p>The ID must only use lower case letters, numbers and hyphens, with no spaces.</p>
          <p>This ID will not be visible to the end user.</p>
        </div>
        
        <h2>Questionnaire ID</h2>
        <govuk-field-error asp-for="@Model.Slug" error-id="@inputId-field-error"></govuk-field-error>
        
        <govuk-input id="@inputId"
                     class="govuk-input"
                     aria-describedby="forms-name-input-name-hint"
                     type="text"
                     name="@nameof(Model.Slug)"
                     asp-for="@Model.Slug"
                     govuk-error-for="@Model?.Slug"/>
      </govuk-form-group>
      <button type="submit" formnovalidate="formnovalidate" class="govuk-button" data-module="govuk-button" data-prevent-double-click="true" data-govuk-button-init="">Save and continue</button>
    </form>
  </div>
</div>