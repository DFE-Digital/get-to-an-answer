@page "/admin/questionnaires/{questionnaireId:guid}/edit-name"
@addTagHelper *, Common
@model Admin.Pages.Questionnaire.EditQuestionnaireName

@{
  const string title = "Edit questionnaire name";
  ViewData["Title"] = title;

  const string inputId = "Title";
}

@section BeforeContent
{
  <a class="govuk-back-link govuk-!-display-none-print" href="@Model?.BackLinkSlug">Back</a>
}

@if (Model!.HasErrors())
{
  @await Html.PartialAsync("_ErrorSummary")
}

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <form accept-charset="UTF-8" method="post">
      <input type="hidden" asp-for="@Model.BackLinkSlug"/>
      <govuk-form-group asp-for="@Model.Title">
        <h1 class="govuk-heading-l govuk-!-margin-0">
          <span class="govuk-caption-l">@Model.QuestionnaireTitle</span>
          <label for="@inputId" class="govuk-label govuk-label--l govuk-!-margin-top-3">@title</label>
        </h1>
        <div class="govuk-hint govuk-!-margin-bottom-5" id="@inputId-hint">
          <p>Give your questionnaire a name to help you find it later. This will not be visible to users.</p>
        </div>
        <govuk-field-error asp-for="@Model.Title" error-id="@inputId-field-error"></govuk-field-error>

        <govuk-input id="@inputId"
                     class="govuk-input"
                     aria-describedby="@inputId-hint"
                     type="text"
                     name="@nameof(Model.Title)"
                     asp-for="@Model.Title"
                     govuk-error-for="@Model?.Title"/>
      </govuk-form-group>
      <button type="submit" formnovalidate="formnovalidate" class="govuk-button" data-module="govuk-button" data-prevent-double-click="true" data-govuk-button-init="">Save and continue</button>
    </form>
  </div>
</div>