@page "/admin/questionnaires/{questionnaireId:guid}/contributors/{contentId:guid}/remove-confirmation"
@addTagHelper *, Common
@using Common.Enum
@model Admin.Pages.Confirmations.ConfirmRemoveContributor

@{
  ViewData["Title"] = "Remove a contributor";
}

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds-from-desktop">
      <form method="post" class="govuk-!-margin-top-6">
          
          <input type="hidden" name="ContributorEmail" value="@Model.ContributorEmail"/>
          <input type="hidden" name="ContributorId" value="@Model.ContributorId"/>
          <fieldset class="govuk-fieldset" aria-describedby="finished-hint">
              <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                  <h2 class="govuk-fieldset__heading">
                      <span class="govuk-caption-l">@Model.QuestionnaireTitle</span>
                      Are you sure you want to remove edit access for '@Model.ContributorEmail'?
                  </h2>
                  <dl class="govuk-!-margin-0">
                      <dt class="govuk-visually-hidden">Status</dt>
                      <dd class="govuk-!-margin-0"><strong class="govuk-tag" data-status="@Model?.QuestionnaireStatus">@Model?.QuestionnaireStatus</strong>
                      </dd>
                  </dl>
              </legend>

              <div class="govuk-warning-text govuk-!-margin-bottom-4 govuk-!-margin-top-4">
                  <span class="govuk-warning-text__icon" aria-hidden="true">!</span>
                  <strong class="govuk-warning-text__text">
                      <span class="govuk-visually-hidden">Warning</span>
                      By deleting this contributor, existing answers with this result page will be broken.
                  </strong>
              </div>

              <div class="govuk-radios" data-module="govuk-radios">
                  <div class="govuk-radios__item">
                      <input class="govuk-radios__input" id="finished-yes" name="DeleteContributor" type="radio" asp-for="@Model.RemoveContributor"
                             value="true">
                      <label class="govuk-label govuk-radios__label" for="finished-yes">
                          Yes, remove them
                      </label>
                  </div>

                  <div class="govuk-radios__item">
                      <input class="govuk-radios__input" id="finished-no" name="DeleteContributor" type="radio" asp-for="@Model.RemoveContributor"
                             value="false">
                      <label class="govuk-label govuk-radios__label" for="finished-no">
                          No, keep them
                      </label>
                  </div>
              </div>
          </fieldset>

          <button class="govuk-button govuk-!-margin-top-4" data-module="govuk-button" type="submit"
                  asp-page-handler="Continue">
              Continue
          </button>
      </form>
  </div>
</div>