@page "/admin/questionnaires/{questionnaireId:guid}/contributors/{contributorId:guid}/remove-confirmation"
@addTagHelper *, Common
@using Common.Enum
@model Admin.Pages.Confirmations.ConfirmRemoveContributor

@{
  ViewData["Title"] = $"Are you sure you want to remove access for '{Model.ContributorEmail}'?";
}

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds-from-desktop">
      <form method="post" class="govuk-!-margin-top-6">
          <input type="hidden" name="ContributorEmail" value="@Model.ContributorEmail"/>
          <input type="hidden" name="ContributorId" value="@Model.ContributorId"/>
          <fieldset class="govuk-fieldset" aria-describedby="remove-contributor-hint">
              <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                  <h2 id="remove-contributor-title" class="govuk-fieldset__heading">
                      <span id="current-questionnaire-title" class="govuk-caption-l">@Model.QuestionnaireTitle</span>
                      @ViewData["Title"]
                  </h2>
              </legend>

              <div id="remove-contributor-hint" class="govuk-hint govuk-!-margin-bottom-8">
                  This person will no longer be able to view or edit the questionnaire.
              </div>

              <div class="govuk-radios" data-module="govuk-radios">
                  <div class="govuk-radios__item">
                      <input class="govuk-radios__input" id="finished-yes" name="RemoveContributor" type="radio" asp-for="@Model.RemoveContributor"
                             value="true">
                      <label class="govuk-label govuk-radios__label" for="finished-yes">
                          Yes, remove person
                      </label>
                  </div>

                  <div class="govuk-radios__item">
                      <input class="govuk-radios__input" id="finished-no" name="RemoveContributor" type="radio" asp-for="@Model.RemoveContributor"
                             value="false">
                      <label class="govuk-label govuk-radios__label" for="finished-no">
                          No, keep person
                      </label>
                  </div>
              </div>
          </fieldset>

          <button id="continue-btn" class="govuk-button govuk-!-margin-top-4" data-module="govuk-button" type="submit"
                  asp-page-handler="Continue">
              Continue
          </button>
      </form>
  </div>
</div>