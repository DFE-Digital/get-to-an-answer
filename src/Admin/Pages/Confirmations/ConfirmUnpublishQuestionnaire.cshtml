@page "/admin/questionnaires/{questionnaireId:guid}/unpublish-confirmation"
@model Admin.Pages.Confirmations.ConfirmUnpublishQuestionnaire

@{
    ViewData["Title"] = "Unpublish the questionnaire";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds-from-desktop">
        <form method="post" class="govuk-!-margin-top-6">
            @Html.AntiForgeryToken()
            <fieldset class="govuk-fieldset" aria-describedby="finished-hint">
                <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                    <h1 class="govuk-fieldset__heading">
                        <span class="govuk-caption-l">@Model.QuestionnaireTitle</span>
                        Are you sure you want to unpublish this questionnaire?
                    </h1>
                </legend>

                <div class="govuk-hint govuk-!-margin-bottom-8">
                    <p>Once you unpublish a questionnaire, people will not be able to view it. It may also affect pages on your service.</p> 
                    <p>You'll still be able to view it in draft.</p>
                </div>

                <div class="govuk-radios" data-module="govuk-radios">
                    <div class="govuk-radios__item">
                        <input class="govuk-radios__input" id="finished-yes" name="UnpublishQuestionnaire" type="radio" asp-for="@Model.UnpublishQuestionnaire"
                               value="true">
                        <label class="govuk-label govuk-radios__label" for="finished-yes">
                            Yes, unpublish it
                        </label>
                    </div>

                    <div class="govuk-radios__item">
                        <input class="govuk-radios__input" id="finished-no" name="UnpublishQuestionnaire" type="radio" asp-for="@Model.UnpublishQuestionnaire"
                               value="false">
                        <label class="govuk-label govuk-radios__label" for="finished-no">
                            No, leave it published
                        </label>
                    </div>
                </div>
            </fieldset>

            <button class="govuk-button govuk-!-margin-top-4" data-module="govuk-button" type="submit"
                    asp-page-handler="Continue">
                Continue
            </button>
        </form>
    </div>
</div>