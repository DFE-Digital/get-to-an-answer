@page "/admin/questionnaires/{questionnaireId:guid}/contents/{contentId:guid}/delete-confirmation"
@addTagHelper *, Common
@using Common.Enum
@model Admin.Pages.Confirmations.ConfirmDeleteContent

@{
  ViewData["Title"] = "Are you sure you want to delete this result page?";
}

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds-from-desktop">
    <form method="post" class="govuk-!-margin-top-6">
        <fieldset class="govuk-fieldset" aria-describedby="delete-results-page-hint">
            <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                <h1 class="govuk-fieldset__heading">
                    <span class="govuk-caption-l">@Model.QuestionnaireTitle</span>
                    @ViewData["Title"]
                </h1>
            </legend>
            <div id="delete-results-page-hint" class="govuk-hint govuk-!-margin-bottom-5 govuk-!-margin-top-4">
                Once you delete a results page, you cannot recover it. If it's already published, it may affect your questionnaire.            </div>

            <div class="govuk-radios" data-module="govuk-radios">
                <div class="govuk-radios__item">
                    <input class="govuk-radios__input" id="finished-yes" name="DeleteContent" type="radio" asp-for="@Model.DeleteContent"
                           value="true">
                    <label class="govuk-label govuk-radios__label" for="finished-yes">
                        Yes, delete it
                    </label>
                </div>

                <div class="govuk-radios__item">
                    <input class="govuk-radios__input" id="finished-no" name="DeleteContent" type="radio" asp-for="@Model.DeleteContent"
                           value="false">
                    <label class="govuk-label govuk-radios__label" for="finished-no">
                        No, keep it
                    </label>
                </div>
            </div>
        </fieldset>

        <button class="govuk-button govuk-!-margin-top-4" data-module="govuk-button" type="submit"
                asp-page-handler="Continue">
            Continue
        </button>
    </form>
  </div>
</div>