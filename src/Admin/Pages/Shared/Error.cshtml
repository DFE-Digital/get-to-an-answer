@page
@using System.Diagnostics
@model Admin.Pages.Shared.Error
@{
    ViewData["Title"] = "Sorry, there is a problem with the service";
    Layout = "_ErrorLayout";
}
@section BeforeGDSContent
{
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <h1 class="govuk-heading-xl">
                @ViewBag.Title
            </h1>
        </div>
    </div>
}

<div class="govuk-error-summary" aria-labelledby="error-summary-title" role="alert" tabindex="-1">
    <div class="govuk-error-summary__body">
        <p>Sorry, there is a problem with the service.</p>
        <p>Try again later.</p>
        <p>If you need to, <a href="/contact" class="govuk-link">contact support</a>.</p>
    </div>
</div>

@if (Model.ViewModel.ShowRequestId)
{
    <p class="govuk-body govuk-!-margin-top-4">
        <strong>Request ID:</strong> <code>@Model.ViewModel.RequestId</code>
    </p>
}
